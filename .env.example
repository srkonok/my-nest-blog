# Node Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_password
DATABASE_NAME=nest_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# Mail Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@example.com

# Redis Configuration (for queues)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL=debug # One of: error, warn, info, http, verbose, debug, silly
LOG_DIR=logs
ENABLE_FILE_LOGGING=false # Set to true to enable file logging

# Audit Configuration
ENABLE_AUDIT_LOGGING=true # Set to false to disable audit logging
AUDIT_LOG_RETENTION_DAYS=90 # Number of days to keep audit logs

# Server URL (for email links)
SERVER_URL=http://localhost:3000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200 